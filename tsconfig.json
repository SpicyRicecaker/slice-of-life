{
  "extends": "@tsconfig/svelte/tsconfig.json",

  "include": ["src/**/*"],
  "exclude": ["node_modules/*", "__sapper__/*", "public/*"],
  "compilerOptions": {
    "target": "esnext",
    "sourceMap": true,
    "typeRoots": ["node_modules/@types"], // "typeRoots": [] -> won't work
    "types": ["svelte", "node"],
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": true
  }
}
