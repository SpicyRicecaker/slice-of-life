{
  "extends": "@tsconfig/svelte/tsconfig.json",

  "include": ["src/**/*", "main.ts"],
  "exclude": ["node_modules/*", "__sapper__/*", "public/*"],
  "compilerOptions": {
    // Our usual options
    "target": "esnext",
    "module": "esnext",
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    // Custom things that we need for svelte
    "typeRoots": ["node_modules/@types"], // "typeRoots": [] -> won't work
    "types": ["svelte", "node"]
  }
}
